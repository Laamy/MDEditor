<Window x:Class="MDEditor.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:MDEditor"
		mc:Ignorable="d"
		Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<RichTextBox FontFamily="Consolas" x:Name="TextEditor" Grid.Column="0" TextChanged="TextEditor_TextChanged" />
		<WebBrowser x:Name="MarkdownDisplay" Grid.Column="1"/>

		<GridSplitter Width="5"/>
	</Grid>
</Window>
